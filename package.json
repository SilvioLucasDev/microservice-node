{
  "name": "microservice-node",
  "version": "0.0.1",
  "description": "Microservice in node using messaging services with clean architecture and TDD",
  "keywords": [
    "clean architecture",
    "clean code",
    "tdd",
    "ddd",
    "solid",
    "design patterns",
    "node",
    "typescript",
    "jest",
    "rabbitmq",
    "kafka"
  ],
  "author": {
    "name": "Silvio Lucas - SLDS",
    "email": "silviolucas_santos@hotmail.com"
  },
  "scripts": {
    "start": "node dist/main",
    "dev": "ts-node-dev --respawn --transpile-only src/main",
    "build": "rimraf dist && tsc -p tsconfig-build.json",
    "lint": "eslint . ",
    "lint:fix": "npm run lint -- --fix",
    "prepare": "husky install",
    "test": "jest --passWithNoTests --no-cache --runInBand",
    "test:watch": "npm test -- --watch",
    "test:staged": "npm test -- --findRelatedTests",
    "test:coverage": "npm test -- --coverage",
    "test:integration": "npm test -- --watch -c jest.integration.config.js"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^5.1.1",
    "module-alias": "^2.2.3",
    "rimraf": "^5.0.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.3",
    "@types/module-alias": "^2.0.2",
    "@types/node": "^20.5.0",
    "eslint-config-standard-with-typescript": "^37.0.0",
    "husky": "^8.0.3",
    "jest": "^29.6.2",
    "jest-mock-extended": "^3.0.5",
    "lint-staged": "^14.0.0",
    "prisma": "^5.1.1",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.6"
  }
}
